@import 'mixins/position.import'

.title
  font-size 2em
  font-weight 100
  padding 20px

.sun:before
  place(80, 80)
  size 250px
  content:''
  display:block
  border-radius:100%
  background :#ddd
  box-shadow:0 0 50px white,0 0 150px white, inset 0 20px 20px 40px white, inset 30px 0 35px 50px ivory
  animation flicker 3.5s infinite

@keyframes flicker {
  0% {box-shadow:0 0 50px white,0 0 150px white, inset 0 20px 20px 40px white, inset 30px 0 35px 50px ivory}

  20% {box-shadow:0 0 60px white,0 0 160px white, inset 0 30px 30px 50px white, inset 40px 0 45px 60px ivory}

  40% {box-shadow:0 0 65px white,0 0 165px white, inset 0 35px 35px 55px white, inset 45px 0 50px 65px ivory}

  60% {box-shadow:0 0 45px white,0 0 145px white, inset 0 15px 15px 35px white, inset 25px 0 30px 45px ivory}

  80% {box-shadow:0 0 35px white,0 0 135px white, inset 0 5px 5px 25px white, inset 15px 0 20px 25px ivory}

  100% {box-shadow:0 0 50px white,0 0 150px white, inset 0 20px 20px 40px white, inset 30px 0 35px 50px ivory}
}

.hill
  position absolute
  bottom 0
  size 100% 30vh
  background #0F0F0F
  z-index 1

.ninja
  place(74, 68)

  & img
    width 53px
